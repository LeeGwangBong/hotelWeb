<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-/mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="lessonusermapper">

<select id="lessonGetMaxNum" resultType="int">
	select nvl(max(lessonUserIndex),0) from lessonUser
</select>


<select id="lessonGetList" parameterType="int" resultType="com.exe.dto.LessonUserDTO">
	select * from lessonUser where lessonUserIndex=#{lessonUserIndex}
</select>

<insert id="insertLessonUser" parameterType="com.exe.dto.LessonUserDTO">
	insert into lessonUser (lessonUserId,lessonUserName,lessonUserEmail,lessonUserDay,className)
	values (#{lessonUserId},#{lessonUserName},#{lessonUserEmail},#{lessonUserDay},#{className})
</insert>

</mapper>